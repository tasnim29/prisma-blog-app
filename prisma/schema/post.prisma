enum PostStatus {
    DRAFT
    PUBLISHED
    ARCHIVED
}

model Post {
    id         String     @id @default(ulid())
    title      String     @db.VarChar(50)
    content    String     @db.Text
    thumbnail  String?
    isFeatured Boolean    @default(false)
    status     PostStatus @default(PUBLISHED)
    tags       String[]
    views      Int        @default(0)
    authorId   String
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    comments   Comment[]

    @@index([authorId])
    @@map("Posts")
}
